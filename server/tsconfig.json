{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@graphql/*": [
        "src/graphql/*"
      ],
      "@interfaces/*": [
        "src/interfaces/*"
      ],
      "@lib/*": [
        "src/lib/*"
      ],
      "@utils/*": [
        "src/utils/*"
      ],
      "*": [
        "node_modules/*"
      ]
    }
  },
  "include": [
    "src/**/*",
    "additional.d.ts"
  ]
}